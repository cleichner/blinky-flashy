#include "Display.h"

void setup() {
    Display.init();
}

uint16_t image[NUM_ROWS][NUM_COLS] = {
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
    {0, 2000, 0, 2000, 0, 2000, 0, 2000},
    {2000, 0, 2000, 0, 2000, 0, 2000, 0},
};


void alternate(uint16_t image[NUM_ROWS][NUM_COLS]) {
    for (uint8_t i = 0; i < NUM_ROWS; ++i) {
        for (uint8_t j = 0; j < NUM_COLS; ++j) {
            image[i][j] = 2000 - image[i][j];
        }
    }
}

void loop()
{
    Display.show(image);
    alternate(image);

    delay(100);
}
